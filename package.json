{
	"name": "ducat-market",
	"main": "src/index.ts",
	"repository": "git@bitbucket.org:ishibustim/ducat-market.git",
	"author": "Randy Ehret <randyehret@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"predevelop": "yarn lint",
		"develop": "cross-env NODE_ENV=development client_path=\"../../dist/client\" concurrently -k -n \"server,client\" -p name -s first \"cross-env port=8000 ts-node src/server/index.ts --watch | bunyan\" \"webpack --progress --watch\"",
		"lint": "tslint ./src/**/*.ts ./spec/**/*.ts",
		"pretest": "yarn lint && yarn build:tests",
		"test": "yarn test:no-build",
		"test:no-build": "mocha -r reflect-metadata dist/spec/**/*.js",
		"test:watch": "mocha -r ts-node/register -r reflect-metadata --watch --watch-extensions ts spec/**/*.ts",
		"test:coverage": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=spec/tsconfig.json nyc mocha -r ts-node/register -r reflect-metadata spec/**/*.spec.ts",
		"start": "node dist/server/index.js | bunyan",
		"prebuild": "yarn lint",
		"build": "yarn build:tests && yarn build:server && yarn build:client",
		"build:server": "tsc -p src/server/tsconfig.json",
		"build:client": "webpack --progress",
		"build:tests": "tsc -p spec/tsconfig.json",
		"postbuild:server": "n-copy -s src/server/config -d dist/server/config \"**/*.json\"",
		"postbuild:tests": "n-copy -s spec -d dist/spec \"**/*.json\" && n-copy -s src/server/config -d dist/src/server/config \"**/*.json\"",
		"clean": "n-clean dist"
	},
	"dependencies": {
		"ajv": "^5.0.0",
		"axios": "^0.18.0",
		"bunyan": "^1.8.12",
		"inversify": "^4.13.0",
		"koa": "^2.5.2",
		"koa-bodyparser": "^4.2.1",
		"koa-router": "^7.4.0",
		"koa-static": "^5.0.0",
		"nconf": "^0.10.0",
		"reflect-metadata": "^0.1.12",
		"routing-controllers": "^0.7.7",
		"shortid": "^2.2.13",
		"swagger2-koa": "^1.0.2"
	},
	"devDependencies": {
		"@types/angular": "^1.6.50",
		"@types/bunyan": "^1.8.4",
		"@types/chai": "^4.1.4",
		"@types/koa": "^2.0.46",
		"@types/koa-bodyparser": "^5.0.1",
		"@types/koa-router": "^7.0.31",
		"@types/koa-static": "^4.0.0",
		"@types/mocha": "^5.2.5",
		"@types/nconf": "^0.0.37",
		"@types/node": "^10.7.1",
		"@types/shortid": "^0.0.29",
		"@types/sinon": "^9.0.7",
		"angular": "^1.7.3",
		"awesome-typescript-loader": "^4.0.1",
		"chai": "^4.1.2",
		"concurrently": "^3.6.1",
		"coveralls": "^3.0.2",
		"cross-env": "^5.2.0",
		"css-loader": "^1.0.0",
		"file-loader": "^2.0.0",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"jasmine-spec-reporter": "^4.2.1",
		"mocha": "^5.2.0",
		"node-sass": "^4.9.3",
		"npm-build-tools": "^2.2.5",
		"nyc": "^12.0.2",
		"sass-loader": "^7.1.0",
		"sinon": "^6.1.5",
		"style-loader": "^0.22.1",
		"ts-node": "^7.0.1",
		"tslint": "^5.11.0",
		"typemoq": "^2.1.0",
		"typescript": "^3.0.1",
		"uglifyjs-webpack-plugin": "^1.3.0",
		"webpack": "^3.12.0"
	}
}
