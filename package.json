{
	"name": "ducat-market",
	"main": "src/index.ts",
	"repository": "git@bitbucket.org:ishibustim/ducat-market.git",
	"author": "Randy Ehret <randyehret@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"predevelop": "yarn lint",
		"develop": "cross-env NODE_ENV=development client_path=\"../../dist/client\" concurrently -k -n \"server,client\" -p name -s first \"cross-env port=8000 ts-node src/server/index.ts --watch | bunyan\" \"webpack --progress --watch\"",
		"lint": "tslint ./src/**/*.ts ./spec/**/*.ts",
		"pretest": "yarn lint && yarn build:tests",
		"test": "yarn test:no-build",
		"test:no-build": "mocha -r reflect-metadata dist/spec/**/*.js",
		"test:watch": "mocha -r ts-node/register -r reflect-metadata --watch --watch-extensions ts spec/**/*.ts",
		"test:coverage": "cross-env TS_NODE_PROJECT=spec/tsconfig.json nyc mocha -r ts-node/register -r reflect-metadata spec/**/*.spec.ts",
		"start": "node dist/server/index.js | bunyan",
		"prebuild": "yarn lint",
		"build": "yarn build:tests && yarn build:server && yarn build:client",
		"build:server": "tsc -p src/server/tsconfig.json",
		"build:client": "webpack --progress",
		"build:tests": "tsc -p spec/tsconfig.json",
		"postbuild:server": "n-copy -s src/server/config -d dist/server/config \"**/*.json\"",
		"postbuild:tests": "n-copy -s spec -d dist/spec \"**/*.json\" && n-copy -s src/server/config -d dist/src/server/config \"**/*.json\"",
		"clean": "n-clean dist"
	},
	"dependencies": {
		"ajv": "^5.0.0",
		"axios": "^0.18.0",
		"bunyan": "^1.8.12",
		"inversify": "^4.13.0",
		"koa": "^2.5.0",
		"koa-bodyparser": "^4.2.0",
		"koa-router": "^7.4.0",
		"koa-static": "^4.0.2",
		"nconf": "^0.10.0",
		"reflect-metadata": "^0.1.12",
		"routing-controllers": "^0.7.7",
		"shortid": "^2.2.8",
		"swagger2-koa": "^1.0.0"
	},
	"devDependencies": {
		"@types/angular": "^1.6.43",
		"@types/bunyan": "^1.8.4",
		"@types/chai": "^4.1.2",
		"@types/koa": "^2.0.45",
		"@types/koa-bodyparser": "^4.2.0",
		"@types/koa-router": "^7.0.27",
		"@types/koa-static": "^4.0.0",
		"@types/mocha": "^5.0.0",
		"@types/nconf": "^0.0.37",
		"@types/node": "^9.6.5",
		"@types/shortid": "^0.0.29",
		"@types/sinon": "^4.3.1",
		"angular": "^1.6.10",
		"awesome-typescript-loader": "^4.0.1",
		"chai": "^4.1.2",
		"concurrently": "^3.5.1",
		"coveralls": "^3.0.0",
		"cross-env": "^5.1.4",
		"css-loader": "^0.28.11",
		"file-loader": "^1.1.11",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"jasmine-spec-reporter": "^4.2.1",
		"mocha": "^5.1.0",
		"node-sass": "^4.8.3",
		"npm-build-tools": "^2.2.5",
		"nyc": "^11.6.0",
		"sass-loader": "^7.0.1",
		"sinon": "^4.5.0",
		"style-loader": "^0.21.0",
		"ts-node": "^6.0.0",
		"tslint": "^5.9.1",
		"typemoq": "^2.1.0",
		"typescript": "^2.8.1",
		"uglifyjs-webpack-plugin": "^1.2.4",
		"webpack": "^3.11.0"
	}
}
